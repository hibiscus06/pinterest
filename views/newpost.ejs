    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-zinc-800">
    <div class="w-full px-10 py-3 flex justify-between bg-zinc-800 mb-10 text-white">
      <h3 class="mt-3">Pinterest</h3>
        <div class="flex gap-10 items-center">
          <a href="/profile">Profile</a> <a href="feed"></a>Feed<a class="px-3 py-2 bg-red-800 rounded-lg text-white" href="/logout">Logout</a>
        </div>
        </div>

        <div class="w-full min-h-screen bg-zinc-800 px-10 py-5 text-white">
            <h1 class="text-xl">Create a new post.</h1>
            <hr class="opacity-10 mt-3">
            <form action="/upload" method="post" enctype="multipart/form-data">
                
                <input class="block w-1/3 px-3 py-2" type="file" name="postImage">
                <input class="block w-1/3 px-3 py-2 border-2 mt-2 rounded-md text-zinc-600" type = "text" name="title" placeholder="Title">
                <textarea class="block w-1/3 px-3 py-2 h-60 border-2 mt-2 rounded-md text-zinc-600" type = "text" name="description" placeholder="Description"></textarea>
                <input class="block w-1/3 px-3 py-2 mt-2 bg-red-700 rounded-md" type="submit" value="Create post">
              </form>
        </div>

</body>
